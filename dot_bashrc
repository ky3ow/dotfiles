if command -v caparace
then
	source <(carapace _carapace bash)
fi

if command -v starship
then 
	eval "$(starship init bash)"
fi

export EDITOR=nvim

alias alp="distrobox enter alpine"

alias v="nvim"

alias che="chezmoi edit"
alias chup="chezmoi update"

alias gco="git checkout"
alias gcoo="git fetch && git checkout"
alias ga="git add"
alias gp="git push"
alias gP="git pull"
alias gc="git commit"
alias gs="git status"
alias gcp="git cherry-pick"
alias gre="git rebase"
alias gm="git merge"
alias gr="git reset"
alias gbr="git branch"

function take {
	mkdir $1
	cd $1
}
