if command -v caparace
then
	source <(carapace _carapace bash)
fi

if command -v starship
then 
	eval "$(starship init bash)"
fi

function take {
	mkdir $1
	cd $1
}

alias alp="distrobox enter alpine"
alias v="nvim"

ABBREV_PLUGIN="$HOME/bash-abbrev-alias/abbrev-alias.plugin.bash"

if [[ -f "$ABBREV_PLUGIN" ]]
then
	source $ABBREV_PLUGIN

	abbrev-alias -g che="chezmoi edit"
	abbrev-alias -g chup="chezmoi update"

	abbrev-alias -g gc="git commit"
	abbrev-alias -g gupd="git commit --amend --no-edit"

	abbrev-alias -g gco="git checkout"
	abbrev-alias -g gcof="git checkout && ff"

	abbrev-alias -g ga="git add"
	abbrev-alias -g gp="git push"
	abbrev-alias -g gP="git pull"

	abbrev-alias -g gs="git status"

	abbrev-alias -g gf="git fetch"
	abbrev-alias -g ff="grp && git pull --ff-only"
	abbrev-alias -g gpr="git remote prune origin"

	abbrev-alias -g gR="git reset --hard"
	abbrev-alias -g gr="git reset --soft"

	abbrev-alias -g gcp="git cherry-pick"
	abbrev-alias -g gcpc="gcp --continue"
	abbrev-alias -g gcpa="gcp --abort"

	abbrev-alias -g gre="git rebase"
	abbrev-alias -g grec="gre --continue"
	abbrev-alias -g grea="gre --abort"

	abbrev-alias -g gm="git merge"
	abbrev-alias -g gmr="git push -u origin HEAD"
fi

export EDITOR=nvim
